{% extends 'frontBase.html.twig' %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Commandes </h3>

            </div>
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                            <div class="form-group">
                                <label for="productName">Name Client</label>
                                {{ form_widget(form.user,{'attr':{'class':'form-control', 'placeholder':'Name'}}) }}
                                <div class="text-danger">{{ form_errors(form.user) }}</div>

                            </div>
                            <div class="form-group">
                                <label for="productDescription">Total</label>
                                {{ form_widget(form.total,{'attr':{'class':'form-control'}}) }}
                                 <div class="text-danger">{{ form_errors(form.total) }}</div>


                            </div>
                            <div class="form-group">
                                <label for="productPrice">Payment Method</label>
                                {{ form_widget(form.paymentMethod,{'attr':{'class':'form-control', 'placeholder':'Payment Method'}}) }}
                               <div class="text-danger">{{ form_errors(form.paymentMethod) }}</div>


                            </div>
                            
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a href="{{asset('/admin/products')}}" class="btn btn-dark">Cancel</a>
                        {{form_end(form)}}
                    </div>
                </div>
            </div>
{% endblock %}