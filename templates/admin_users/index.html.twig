{% extends 'backBase.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Users </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="btn btn-success" href="{{ asset('/admin/users/new') }}">+ Add a user</a></li>
                    </ol>
                </nav>
            </div>
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped ">
                                    <thead>
                                    <tr>
                                        <th> Picture </th>
                                        <th> ID </th>
                                        <th> Username </th>
                                        <th> Email </th>
                                        <th> Role </th>
                                        <th> Address </th>
                                        <th> Ban Period </th>
                                    </tr>
                                    </thead>
                                    {% for user in users %}

                                    <tbody>
                                    <!-- ***** Fourat Note **** -->
                                    <!-- Bech t7il for lina t3abi el table -->
                                    <tr onclick="">
                                        <td class="py-1">
                                            <!-- ***** Fourat Note **** -->
                                            <!-- ***** assert('Profiles/'~user.id) -->
                                            <img src="{{ asset('back/images/faces-clipart/pic-1.png') }}" alt="image" />
                                        </td>
                                        <th> {{user.id}} </th>
                                        <td> {{user.username}} </td>
                                        <td> {{user.email}} </td>
                                        <td> {{user.roles}} </td>
                                        <td> {{user.address}} </td>
                                        <td> <a class="" href="{{ path('admin_users_edit', {'id' : user.id})}}">
                                                <i class="mdi mdi-pencil"></i>
                                            </a></td>
                                        <td> <a class="" href="{{ path('admin_users_delete', {'id' : user.id})}}">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a></td>

                                    </tr>

                                    </tbody>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </div>
{% endblock %}
