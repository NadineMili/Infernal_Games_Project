{% extends 'backBase.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Users </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="btn btn-success" href="{{ asset('/admin/users/new') }}">+ Add a user</a></li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped ">
                                <thead>
                                <tr>
                                    <th> Picture </th>
                                    <th> ID </th>
                                    <th> Email </th>
                                    <th> password </th>
                                    <th> Address </th>
                                </tr>
                                </thead>
                                {% for user in users %}

                                    <tbody>

                                    <tr onclick="">
                                        <td class="py-1">

                                            <img src="{{ asset('back/images/faces-clipart/pic-1.png') }}" alt="image" />
                                        </td>
                                        <th> {{user.id}} </th>
                                        <td> {{user.email}} </td>
                                        <td> {{user.password}} </td>
                                        <td> <a class="" href="{{ path('admin_users_edit', {'id' : user.id})}}">
                                                <i class="mdi mdi-pencil"></i>
                                            </a></td>
                                        <td> <a class="" href="{{ path('admin_users_delete', {'id' : user.id})}}">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a></td>

                                    </tr>

                                    </tbody>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
