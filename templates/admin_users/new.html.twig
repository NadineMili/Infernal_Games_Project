{% extends 'backBase.html.twig' %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">Users</h3>

                <li class="breadcrumb-item active" aria-current="page">Edit game.name</li>
            </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}

                    <div class="form-group">
                        <label for="username">username</label>
                        {{ form_widget(form.username,{'attr':{'class':'form-control', 'placeholder':'username'}}) }}
                        <div class="text-danger">{{ form_errors(form.username) }}</div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        {{ form_widget(form.email,{'attr':{'class':'form-control', 'placeholder':'useremail'}}) }}
                        <div class="text-danger">{{ form_errors(form.email) }}</div>
                    </div>
                    <div class="form-group">
                        <label for="roles">Role</label>
                        {{ form_widget(form.roles,{'attr':{'class':'form-control', 'placeholder':'role'}}) }}
                        <div class="text-dangr">{{ form_errors(form.roles) }}</div>
                    </div>
                    <div class="form-group">
                        <label for="address">address</label>
                        {{ form_widget(form.address,{'attr':{'class':'form-control', 'placeholder':'Adress'}}) }}
                        <div class="text-danger">{{ form_errors(form.address) }}</div>
                    </div>
                    <div class="form-group">
                        <label for="UserbanPeriod">banPeriod</label>
                            {{ form_widget(form.banPeriod,{'attr':{'class':'form-control', 'placeholder':'BanPeriod'}}) }}
                            <div class="text-danger">{{ form_errors(form.banPeriod) }}</div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a href="{{asset('/admin/users')}}" class="btn btn-dark">Cancel</a>
                    {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}