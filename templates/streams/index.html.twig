{% extends 'frontBase.html.twig' %}

{% block title %}- Streams{% endblock %}

{% block body %}




    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="{{ asset('front/img/page-top-bg/1.jpg') }}">
        <div class="page-info">
            <h2>Games</h2>
            <div class="site-breadcrumb">
                <a href="{{ asset('/') }}">Home</a>  /
                <span>Games</span>
            </div>
        </div>
    </section>
    <!-- Page top end-->




    <!-- Games section -->
    <section class="games-section">
        <div class="container">
            <div class="row">
                <div class="col">
                    <ul class="blog-filter">
                        <!-- K3ayba for -->
                        {% for rating in ratings %}
                        <li><a href="#">{{ rating.label }}</a></li>
                        {%  endfor %}
                        <!-- endfor -->
                    </ul>
                </div>

                <div class="col">
                    <a class="align-top site-btn" href="{{ asset('/streams/new') }}">Start your own stream!</a>
                </div>

            </div>


            <!-- ******** FOURAT NOTE ******** -->
            <div class="row blog-item">
                <!-- ******** Games list ******** -->
                <div class="col-xl-9 col-lg-8 col-md-7">
                    <div class="row">
                        <!-- ******** FOURAT NOTE ******** -->
                        <!-- ******** ligné for game in games ******** -->
                        {% if streams|length>0 %}
                        {% for stream in streams %}
                            <div class="col-lg-4 col-md-6">
                                <div class="game-item">
                                    <!-- ******** Taswiret elgame ******** -->
                                    <h5>{{ stream.title }}</h5>
                                    <!-- ******** href  ******** -->
                                    <a href="{{ path('watch_stream', {'id':stream.id}) }}" class="read-more">Watch now!  <img src="{{ asset('front/img/icons/double-arrow.png') }}" alt="#"/></a>
                                </div>
                            </div>
                        {% endfor %}
                        {% else %}
                        <div class="col-lg-4 col-md-6">
                            <div class="game-item">
                                <p>No live streams for now :/</p>
                            </div>
                        </div>
                        {% endif %}

                    </div>

                </div>

                <!-- ******** FOURAT NOTE ******** -->
                <!-- ******** Recherche par category lehné ******** -->
                <div class="col-xl-3 col-lg-4 col-md-5 sidebar game-page-sideber">
                    <div id="stickySidebar">
                        <div class="widget-item">
                            <div class="categories-widget">
                                <h4 class="widget-title">Categories</h4>
                                <ul>
                                    {% for category in categories %}
                                    <li><a href="">{{ category.label }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        {% if ads|length>0  %}
                        <div class="widget-item">
                            <div class="stickySidebar">
                                {% set ad= random(0, ads|length-1) %}
                                <a href="{{ asset(ads[ad].reflink) }}" target="_blank"><img src="{{ asset('Ads/'~ads[ad].image) }}" width="200px"></a>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Games end-->


    <!-- Featured section -->
    <section class="featured-section">
        <div class="featured-bg set-bg" data-setbg="{{ asset('Games/'~game.id~'.png') }}"></div>
        <div class="featured-box">
            <div class="text-box">
                <div class="top-meta"><a href="">Games</a></div>
                <h3>{{game.name}}</h3>
                <p>Our users highest rated game!</p>
                <a href="#" class="read-more">Read More <img src="{{ asset('front/img/icons/double-arrow.png') }}" alt="#"/></a>
            </div>
        </div>
    </section>
    <!-- Featured section end-->






{% endblock %}
