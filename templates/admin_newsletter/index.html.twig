{% extends 'backBase.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Newsletters </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="btn btn-success" href="{{ asset('/admin/newsletter/new') }}">+ Write a new newsletter</a></li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped ">
                                <thead>
                                <tr>
                                    <th> Picture </th>
                                    <th> ID </th>
                                    <th> Title </th>
                                    <th> Author </th>
                                    <th> Date </th>
                                    <th> Sent </th>
                                </tr>
                                </thead>
                                <tbody>
                                <!-- ***** Fourat Note **** -->
                                <!-- Bech t7il for lina t3abi el table -->

                                {% for newsletter in newsletters %}
                                <tr onclick="">
                                    <td class="py-1">
                                        <!-- ***** Fourat Note **** -->
                                        <!-- ***** assert('Games/'~game.id) -->
                                        <img src="{{ asset('back/images/faces-clipart/pic-1.png') }}" alt="image" />
                                    </td>
                                    <td> {{ newsletter.id }}</td>
                                    <td> {{ newsletter.title }}</td>
                                    <td> {{ newsletter.author }}</td>
                                    <td> {{ newsletter.date|date('Y-m-d') }}</td>
                                    {% if (newsletter.sent) %}
                                        <td><i class="mdi mdi-check-all"></i></td>
                                    {% else %}
                                        <td><i class="mdi mdi-close"></i></td>
                                    {% endif %}
                                    <td> <a class="" href="{{ path('admin_newsletter_edit', {'id':newsletter.id}) }}">
                                            <i class="mdi mdi-pencil"></i>
                                        </a></td>

                                    <td> <a class="" href="{{ asset('admin/games/{{ newsletter.id }}') }}">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a></td>
                                </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
