{% extends 'backBase.html.twig' %}


{% block body %}

    <div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Newsletter </h3>

            <li class="breadcrumb-item active" aria-current="page">Add newsletter</li>
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <h1 for="newsletterTitle">{{ newsletter.title }}</h1>

                    </div>

                    <div class="form-group">
                        <p for="newsletterContent">{{ newsletter.content }}</p>
                    </div>

                    <a class="btn btn-dark" href="{{ asset('/admin/newsletter') }}">Return</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}