{% extends 'backBase.html.twig' %}

{% block title %}Stream categories{% endblock %}

{% block js %}

{% endblock %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Categories </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="ml-2"><a class="btn btn-light" href="{{ asset('/admin/streams') }}">Streams</a></li>
                        <li class="ml-2"><a class="btn btn-success" href="{{ asset('/admin/streams/categories/new') }}">+ Add a new category</a></li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped ">
                                <thead>
                                <tr>
                                    <th> Label </th>
                                </tr>
                                </thead>
                                <tbody>
                                <!-- ***** Fourat Note **** -->
                                <!-- Bech t7il for lina t3abi el table -->

                                {% for category in categories %}
                                    <tr onclick="">
                                        <td> {{ category.label }}</td>
                                        <td> <a class="" href="{{ path('admin_streams_categories_edit', {'id':category.id}) }}" title="Inspect">
                                                <i class="mdi mdi-pencil mdi-18px"></i>
                                            </a></td>

                                        <td> <a href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="mdi mdi-delete text-danger mdi-18px"></i>

                                            </a>
                                            <div class="dropdown-menu">
                                                <h6 class="dropdown-header">Are you sure to delete this category?</h6>
                                                <a class="dropdown-item text-danger" href="{{ path('admin_streams_categories_delete', {'id':category.id}) }}">Delete</a>
                                            </div></td>
                                    </tr>
                                {% endfor %}


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}