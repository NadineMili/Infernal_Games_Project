{% extends 'backBase.html.twig' %}

{% block body %}

    <div class="main-panel">
    <div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Blogs </h3>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                <div class="form-group">
                    <label for="gameName">Title</label>
                    {{ form_widget(form.title,{'attr':{'class':'form-control', 'placeholder':'Title'}}) }}
                    <div class="text-danger">{{ form_errors(form.title) }}</div>
                </div>

                <div class="form-group">
                    <label for="gameDescription">Content</label>
                    {{ form_widget(form.content,{'attr':{'class':'form-control', 'placeholder':'Content'}}) }}
                    <div class="text-danger">{{ form_errors(form.content) }}</div>
                </div>
                
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>

              
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}