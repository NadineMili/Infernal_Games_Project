{% block body %}
    <html lang="zxx">
    <head>
        <title>Infernal Games {% block title %}{% endblock %}</title>
        <meta charset="UTF-8">

        <link rel="stylesheet" href="{{ asset('front/login/css/style.css') }}"/>
        <link href="{{ asset('img/infernalLogo.ico') }}" rel="shortcut icon"/>
        <link rel="stylesheet" href="{{ asset ('front/css/style.css ') }}"/>
        <link rel="stylesheet" href="{{ asset('front/css/font-awesome.min.css') }}"/>
        <script src="https://kit.fontawesome.com/3bcd2f2179.js" crossorigin="anonymous"></script>



    </head>
    <body>

    <!-- Page top section -->

    <div class="page-info">
        <img src="img/infernalLogo.ico" width="100" height="100" alt="img"/>
    </div>

    <div class="site-breadcrumb">
        <a href="{{ asset('/home') }}"> <i class="fa-solid fa-house-chimney" style='font-size:32px;color:white;position:relative;right:70px;top:30px'></i></a>
    </div>

    <!-- Page top end-->
    <section class="games-section">
        <div >
            <div >
                <div class="row w-100 m-0">
                    <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                        <div class="card col-lg-4 mx-auto">
                            <div class="card-body px-5 py-5">
                                <h3 class="card-title text-left mb-3">Please sign in</h3>
                                <form method="post" >
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}


                                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                                    <table width="100%" >
                                        <tr><td>
                                                <label for="inputEmail">Email</label></td>
                                            <td>
                                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                            </td></tr>
                                        <tr>
                                            <td>
                                                <label for="inputPassword">Password</label></td>
                                            <td>
                                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                                                <input type="hidden" name="_csrf_token"
                                                       value="{{ csrf_token('authenticate') }}"
                                                >
                                            </td>
                                        </tr>
                                        {#
                                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                        See https://symfony.com/doc/current/security/remember_me.html

                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me"> Remember me
                                            </label>
                                        </div>
                                        #}

                                        <td colspan="2" >
                                            <button class="btn btn-block btn-outline-primary btn-lg" type="submit" style="width: 100%" >
                                                Sign in


                                            </button></td>
                                        </tr>
                                        <tr><td colspan="2" >
                                                <a href="{{path('connect_google')}}" class="btn btn-block btn-outline-primary btn-lg" style="width: 100%">continue with google</a></td></tr>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
        </div>
    </section>


    <!-- container-scroller -->
    <!-- plugins:js -->.
    <script src="{{ asset('vendors/js/vendor.bundle.base.js') }}"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="{{ asset('front/login/js/off-canvas.js') }}"></script>
    <script src="{{ asset('front/login/js/hoverable-collapse.js') }}"></script>
    <script src="{{ asset('front/login/js/misc.js') }}"></script>
    <script src="{{ asset('front/login/js/settings.js') }}"></script>
    <script src="{{ asset('front/login/js/todolist.js') }}"></script>
    <!-- endinject -->
    </body>
    </html>

{% endblock %}
