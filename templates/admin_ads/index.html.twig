{% extends 'backBase.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> <h1> <p style="color:purple;">   Ads  </p> </h1></h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="btn btn-success" href="{{ asset('/admin/ads/new') }}">+ Create an Ad</a></li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped ">
                                <thead>
                                <tr>
                                    <th> ID </th>
                                    <th> Nom </th>
                                    <th> Type </th>
                                    <th> Sponsor </th>
                                    <th> Description </th>
                                    <th> Etat </th>
                                    <th> Referral Type </th>
                                    <th> Referral Link </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for ad in ads %}
                                    <tr onclick="">
                                       
                                        <th> {{ ad.id }} </th>
                                        <td> {{ ad.nom }} </td>
                                        <td> {{ ad.type }} </td>
                                        <td> {{ ad.sponsor }} </td>
                                        <td> {{ ad.description | length > 50 ? ad.description|slice(0, 50) ~ '...' : ad.description}} </td>
                                        <td> {{ ad.etat ? 'active':'not active' }} </td>
                                        <td> {{ ad.reflinktype }} </td>
                                        <td> {{ ad.reflink | length > 30 ? ad.reflink|slice(0, 30) ~ '...' : ad.reflink }} </td>
                                       
                                        <td> <a class="" href="{{ path('admin_ads_edit',{'id': ad.id}) }}">
                                                <i class="mdi mdi-pencil"></i>
                                            </a></td>

                                        <td> <a class="" href="{{ path('admin_ads_delete',{'id': ad.id})}}">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
